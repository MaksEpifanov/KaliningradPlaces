<header class="container">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="logo d-flex align-items-start">
      <img src="/images/logo.svg" alt="logo" /><a class="navbar-brand ms-2" href="/"><strong>Kaliningrad place</strong></a>
    </div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse text-center" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item mx-1">
            <a class="nav-link <%= title=== "Kaliningrad Places" && "active" %>" href="/"><strong>Home</strong></a>
        </li>
        <li class="nav-item mx-1">
            <a class="nav-link <%= title === "All places in Kaliningrad" && "active" %>" href="/places?page=1"><strong>Places</strong></a>
        </li>
        <li class="nav-item mx-1">
            <a class="nav-link <%= title === "About project" && "active" %>" href="/about"><strong>About</strong></a>
        </li>
      </ul>
      <ul class="navbar-nav align-items-center">
        <% if (!currentUser) { %>
        <li class="nav-item">
            <a href="/register" class="nav-link <%= title === "Register new user" && "active"%>"><strong>Sign Up</strong></a>
        </li>
        <li class="nav-item btn btn-primary py-0 px-3">
          <a href="/login" class="nav-link text-white"><strong>Log In</strong></a>
        </li>
        <% } else {%>
        <div class="dropdown">
          <button class="btn btn-primary dropdown-toggle h-25 text-black fw-bold px-3 text-white" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
              <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
            </svg>
            <span><%= currentUser.lastName && currentUser.firstName ? `${currentUser.firstName} ${currentUser.lastName}` : currentUser.username %></span>
          </button>
          <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end" aria-labelledby="dropdownMenuButton1">
            <li>
              <a class="dropdown-item" href="/p/<%= currentUser._id %>">Profile</a>
            </li>
            <li>
              <a class="dropdown-item" href="/places/create">Create new place</a>
            </li>
            <li>
              <a class="dropdown-item" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
        <% } %>
      </ul>
    </div>
  </nav>
  <div class="col-4 offset-4"><%- partial('partials/flash')%></div>
</header>
