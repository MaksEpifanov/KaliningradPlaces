<div class="container">
  <nav class="navbar my-2 sticky-top navbar-expand-lg navbar-light">
    <div class="logo d-flex align-items-start">
      <img src="/images/logo.svg" alt="logo" />
      <a class="navbar-brand ms-2" href="/"
        ><strong>Kaliningrad place</strong></a
      >
    </div>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNav"
      aria-controls="navbarNav"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div
      class="collaps navbar-collapse text-center justify-content-between"
      id="navbarNav"
    >
      <ul class="navbar-nav">
        <li class="nav-item mx-1 ms-3">
          <a class="nav-link" href="/"><strong>Home</strong></a>
        </li>
        <li class="nav-item mx-1">
          <a class="nav-link" href="/places?page=1"><strong>Places</strong></a>
        </li>
        <li class="nav-item mx-1">
          <a class="nav-link" href="/about"><strong>About</strong></a>
        </li>
      </ul>
      <ul class="navbar-nav align-items-center">
        <% if (!currentUser) { %>
        <li class="nav-item">
          <a href="/register" class="nav-link"><strong>Sign Up</strong></a>
        </li>
        <li class="nav-item btn btn-primary py-0 px-3">
          <a href="/login" class="nav-link text-white"
            ><strong>Log In</strong></a
          >
        </li>
        <% } else {%>
        <div class="dropdown">
          <button
            class="btn btn-primary dropdown-toggle"
            type="button"
            id="dropdownMenuButton1"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            <img src="/images/defaultUser.svg" alt="def user photo" />
            <%= currentUser.username %>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li>
              <a class="dropdown-item" href="/p/<%= currentUser._id %>"
                >Profile</a
              >
            </li>
            <li>
              <a class="dropdown-item" href="/places/create"
                >Create new place</a
              >
            </li>
            <li><a class="dropdown-item" href="/logout">Logout</a></li>
          </ul>
        </div>
        <% } %>
      </ul>
    </div>
  </nav>
  <div class="col-4 offset-4"><%- include('./flash')%></div>
</div>
