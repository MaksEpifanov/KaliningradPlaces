<%- layout('layout/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/starability.css" />
<script src="https://api.mapbox.com/mapbox-gl-js/v2.5.1/mapbox-gl.js"></script>
<link
  href="https://api.mapbox.com/mapbox-gl-js/v2.5.1/mapbox-gl.css"
  rel="stylesheet"
/>
<div class="container">
  <div class="row side-border-radius box-shadow p-3">
    <div class="left col-6 d-flex flex-column">
      <h3><%= place.title %></h3>
      <div class="d-flex justify-content-between">
        <p><%= place.location %></p>
        <div>
          <% if (!place.author.firstName && !place.author.lastName) { %>
          <p><%= place.author.username %></p>
          <% } else { %>
          <p><%= `${place.author.firstName} ${place.author.lastName}`%></p>
          <% } %>
        </div>
      </div>
      <div
        id="map"
        class="side-border-radius"
        style="width: 100%; height: 400px"
      ></div>
      <p><%= place.description %></p>
    </div>
    <div class="right col-6">
      <% if (!place.images[1]) {%>
      <div class="div">
        <img src="<%= place.images[0].url %>" alt="" class="img-fluid" />
      </div>
      <% } else {%>
      <div
        id="carouselExampleControls"
        class="carousel slide"
        data-bs-ride="carousel"
      >
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img
              src="<%= place.images[0].url  %> "
              class="d-block w-100"
              alt="1 slide image"
            />
          </div>
          <% for (let i = 1; i < place.images.length; i++) { %>
          <div class="carousel-item">
            <img
              src="<%= place.images[i].url  %> "
              class="d-block w-100"
              alt="<%= i %>  slide image"
            />
          </div>
          <% } %>
        </div>
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#carouselExampleControls"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#carouselExampleControls"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
      <% } %>
    </div>

    <div class="col-12 my-3">
      <% if(currentUser) { %>
      <form
        class="mb-3 validated-form"
        action="/places/<%= id %>/reviews"
        method="POST"
        novalidate
      >
        <h5>Leave review</h5>
        <div class="mb-3">
          <fieldset class="starability-basic">
            <legend>Rating:</legend>
            <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="review[rating]"
              value="1"
              checked
              aria-label="No rating."
            />
            <input
              type="radio"
              id="first-rate1"
              name="review[rating]"
              value="1"
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[rating]"
              value="2"
            />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[rating]"
              value="3"
            />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[rating]"
              value="4"
            />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[rating]"
              value="5"
            />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
        <div class="mb-3">
          <label class="form-label" for="review">Review:</label>
          <textarea
            class="form-control"
            name="review[body]"
            id="review"
            cols="30"
            rows="4"
            required
          ></textarea>
        </div>
        <button class="btn btn-success">Send review</button>
      </form>
      <% } %> <% if (place.reviews.length) {%> <% for (let rev of place.reviews)
      { %>
      <div class="card mb-3">
        <div class="card-body">
          <div class="header-card d-flex justify-content-between">
            <h6 class="card-title">
              <%= rev.author.username[0].toUpperCase() +
              rev.author.username.slice(1) %>
            </h6>

            <% if(currentUser && rev.author.equals(currentUser._id)) {%>
            <form
              action="/places/<%= place._id  %>/reviews/<%= rev._id %>?_method=DELETE"
              method="POST"
            >
              <button class="btn btn-sm btn-danger">X</button>
            </form>
            <%}%>
          </div>
          <p class="starability-result" data-rating="<%= rev.rating %>">
            Rated: <%= rev.rating %> stars
          </p>
          <p class="text-muted">Review: <%= rev.body %></p>
        </div>
      </div>
      <% } %> <% } else { %>
      <p class="list-group-item">no reviews</p>
      <% } %>
    </div>
  </div>

  <script>
    const mbToken = '<%- process.env.MAPBOX_TOKEN %>'
    const place = <%- JSON.stringify(place) %>
  </script>
  <script src="/javascripts/mapShow.js"></script>
</div>
